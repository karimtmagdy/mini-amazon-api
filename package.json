    "passport-local": "^1.0.0",
    "resend": "^6.9.1",
    "sanitize-html": "^2.17.0",
    "sharp": "^0.34.5",
    "slugify": "^1.6.6",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3",
    "stripe": "^20.3.1",
