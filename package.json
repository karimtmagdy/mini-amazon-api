{
  "name": "mini-amazon-api",
  "version": "1.0.0",
  "description": "Mini Express + Mongoose + Zod + TypeScript API for Vercel",
  "main": "./src/index.ts",
  "engines": {
    "node": "22.x"
  },
  "private": true,
  "type": "commonjs",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "kill": "kill-port 8000",
    "random": "node -e \"console.log(crypto.randomBytes(32).toString('hex'))\"",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "deploy": "vercel build && vercel --prod --yes",
    "vercel": "vercel dev",
    "clean": "npx tsx src/scripts/clean-fields.ts",
    "test:cleanup": "npx tsx src/scripts/test-cleanup.ts"
  },
  "author": "karimtmagdy",
  "license": "Apache-2.0",
  "keywords": [
    "rest api",
    "express",
    "typescript",
    "mongoose"
  ],
  "dependencies": {
