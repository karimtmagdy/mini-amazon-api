{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": "./src",

    // Module system - Choose based on your setup
    "module": "es2015",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node"], // ✅ Enable Node types

    // Build options
    "sourceMap": true,
    "declaration": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    // Strict checks
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "resolveJsonModule": true, // ✅ For importing JSON
    "allowSyntheticDefaultImports": true,

    // Isolated modules (required for some bundlers)
    "isolatedModules": true,
    "verbatimModuleSyntax": false, // ⚠️ May conflict with CommonJS

    "noEmitOnError": false
  },
  "include": ["src/**/*"], // ✅ Specify source folders
  "exclude": ["node_modules", "dist"]
}
